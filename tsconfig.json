{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "arrowParens": true,
        "baseUrl": "src",
        "lib": [
            "es2018",
            "dom",
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./build/",
        "paths": {
            "@flowervolution/*": ["./*"],
            "@flowervolution/public/*": ["../public/*"],
        },
        "quotemark": [true, "single", "jsx-double"],
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es2018",
        "types": [
            "node",
        ],
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "linterOptions": {
        "exclude": ["**/node_modules/**/*"]
    }
}
